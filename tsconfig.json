{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": false,
    "moduleResolution": "bundler",
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@/src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "examples/themes/custom-themes.ts",
    "examples/themes/schema-themes.ts"
  ],
  "exclude": [".specstory/**", "**/*.test.ts", "dist/**"]
}
