{
  "name": "logsdx",
  "version": "0.1.0",
  "description": "log streaming with dx on the ðŸ§ ",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "logsdx": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/index.ts && tsc",
    "postbuild": "mkdir -p dist/clients/react && cp src/clients/react/globals.css dist/clients/react/globals.css",
    "lint": "eslint -c eslint.config.ts src/**/*.ts",
    "format": "bunx prettier .",
    "format:fix": "bunx prettier --write .",
    "preview": "bun run dist/cli/index.js",
    "test": "bun test",
    "release": "bunx release-it"
  },
  "keywords": [
    "logs",
    "log-stream",
    "cli",
    "log-enhancer"
  ],
  "author": "me@jeffry.in",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.3",
    "@types/bun": "latest",
    "@types/node": "^22.14.1",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.24.0",
    "lucide-react": "^0.487.0",
    "shadcn-ui": "^0.9.5",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.3",
    "tsup": "^8.4.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "@radix-ui/react-scroll-area": "^1.2.4",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "json5": "^2.2.3",
    "prismjs": "^1.30.0",
    "react": "^19.1.0",
    "shiki": "^3.2.2"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}",
      "push": true
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}"
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "after:bump": [
        "bun run build"
      ],
      "after:release": "echo Successfully released ${version} to npm."
    }
  },
  "files": [
    "dist",
    "src",
    "!**/*.test.*",
    "!**/__tests__"
  ]
}
